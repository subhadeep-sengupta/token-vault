{
	"compilerOptions": {
		"types": [
			"mocha",
			"chai",
			"node"
		],
		"typeRoots": [
			"./node_modules/@types"
		],
		"lib": [
			"es2022"
		],
		"module": "commonjs",
		"target": "es2022",
